  "description": "ALPS CLI tool - generate documentation from ALPS profiles",
  "main": "dist/asd.js",
  "types": "dist/asd.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/alps-asd/app-state-diagram.git",
    "directory": "packages/app-state-diagram"
  },
  "homepage": "https://github.com/alps-asd/app-state-diagram#readme",
  "publishConfig": {

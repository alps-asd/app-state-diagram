{
  "name": "alps2dot",
  "version": "1.0.0",
  "description": "Convert ALPS (Application-Level Profile Semantics) documents to DOT format for Graphviz visualization",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "alps2dot": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "alps",
    "dot",
    "graphviz",
    "api",
    "documentation",
    "state-diagram",
    "hypermedia",
    "rest",
    "visualization",
    "typescript"
  ],
  "author": "Akihito Koriyama <akihito.koriyama@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/alps-asd/app-state-diagram#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alps-asd/app-state-diagram.git"
  },
  "bugs": {
    "url": "https://github.com/alps-asd/app-state-diagram/issues"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.2",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "eslint": "^8.51.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "examples"
  ]
}
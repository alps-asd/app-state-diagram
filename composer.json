{
    "name": "koriym/app-state-diagram",
    "description": "An Application Diagram Generator",
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-filter": "*",
        "ext-simplexml": "*",
        "ext-libxml": "*",
        "ext-dom": "*",
        "ext-mbstring": "*",
        "michelf/php-markdown": "^1.9",
        "seld/jsonlint": "^1.8",
        "koriym/data-file": "^1.0",
        "symfony/polyfill-php81": "^1.31"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6.10",
        "bamarni/composer-bin-plugin": "^1.4",
        "rector/rector": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Koriym\\AppStateDiagram\\": "src/",
            "Koriym\\XmlLoader\\": "src-xml"
        },
        "files": ["vendor-xml2json/xml2json.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Koriym\\AppStateDiagram\\": [
                "tests/",
                "tests/Fake"
            ]
        }
    },
    "bin": [
        "/bin/asd"
    ],
    "scripts": {
        "post-install-cmd": ["@composer bin all install --ansi", "cd asd-sync && npm install", "cd alps2dot && npm install && npm run build"],
        "post-update-cmd": ["@composer bin all update --ansi", "cd asd-sync && npm install", "cd alps2dot && npm install && npm run build"],
        "docs" : [
            "bin/asd docs/bookstore/alps.xml",
            "bin/asd docs/bookstore/ja/alps.xml",
            "bin/asd docs/amazon/alps.json",
            "bin/asd docs/lms/alps.xml",
            "bin/asd docs/lms/ja/alps.xml",
            "bin/asd --mode=markdown docs/bookstore/alps.xml",
            "bin/asd --mode=markdown docs/bookstore/ja/alps.xml",
            "bin/asd --mode=svg docs/bookstore/alps.xml",
            "bin/asd --mode=svg docs/lms/alps.xml"
        ],
        "md" : "bin/asd -c docs/blog/asd.md.xml docs/blog/profile.xml",
        "alps2dot": "./bin/alps2dot.sh",
        "alps2dot-demo": "./tests/bin/demo_compare.sh",
        "test": "./vendor/bin/phpunit",
        "tests": ["@cs", "@test", "@sa"],
        "coverage": "php -dzend_extension=xdebug.so -dxdebug.mode=coverage ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage",
        "pcov": "php -dextension=pcov.so -d pcov.enabled=1 ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage  --coverage-clover=coverage.xml",
        "cs": "phpcs --standard=./phpcs.xml src tests",
        "cs-fix": "./vendor/bin/phpcbf src tests",
        "clean": ["./vendor/bin/phpstan clear-result-cache", "./vendor/bin/psalm --clear-cache", "rm -rf tests/tmp/*.php"],
        "sa": ["psalm --show-info=false", "./vendor/bin/phpstan analyse -c phpstan.neon"],
        "metrics": "./vendor/bin/phpmetrics --report-html=build/metrics --exclude=Exception --log-junit=build/junit.xml --junit=build/junit.xml src",
        "phpmd": "./vendor/bin/phpmd src text ./phpmd.xml",
        "compile": ["composer update --no-dev", "rm -rf asd-sync/node_modules" ,"box compile"],
        "build": ["@cs", "@sa", "@pcov", "@metrics", "@compile"],
        "baseline": "./vendor/bin/phpstan analyse -configuration -c phpstan.neon --generate-baseline --memory-limit=-1 && ./vendor/bin/psalm --set-baseline=psalm-baseline.xml"
    },
    "scripts-descriptions": {
        "docs": "Generate documentation for all example ALPS profiles",
        "md": "Generate markdown documentation for blog profile",
        "alps2dot": "Run alps2dot TypeScript CLI",
        "alps2dot-demo": "Compare PHP and TypeScript alps2dot outputs",
        "test": "Run PHPUnit tests",
        "tests": "Run all checks (cs, test, sa)",
        "coverage": "Run tests with Xdebug coverage",
        "pcov": "Run tests with PCOV coverage",
        "cs": "Check coding standards",
        "cs-fix": "Fix coding standards",
        "clean": "Clear static analysis caches",
        "sa": "Run static analysis (Psalm + PHPStan)",
        "metrics": "Generate code metrics report",
        "phpmd": "Run PHP Mess Detector",
        "compile": "Compile PHAR archive",
        "build": "Full build pipeline",
        "baseline": "Generate static analysis baselines"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        }
    }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Login Request",
  "type": "object",
  "required": ["username", "password"],
  "properties": {
    "username": {
      "description": "Username for login",
      "type": "string",
      "minLength": 3,
      "maxLength": 100
    },
    "password": {
      "description": "Password for login",
      "type": "string",
      "minLength": 8,
      "maxLength": 255
    }
  }
}
